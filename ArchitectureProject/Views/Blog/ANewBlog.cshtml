
@model ArchitectureProject.Models.Entity.Blog

@{
    ViewBag.Title = "ANewBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">

            <h4 class="mb-3 header-title">Blog Ekleme</h4>

            <form class="form-horizontal" method="post">

                <div class="row mb-3">
                    <label for="inputEmail3" class="col-4 col-xl-3 col-form-label">Başlık</label>
                    <div class="col-8 col-xl-9">
                        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="inputEmail3" class="col-4 col-xl-3 col-form-label">Yazar</label>
                    <div class="col-8 col-xl-9">
                        @Html.TextBoxFor(x => x.Author, new { @class = "form-control" })
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="inputEmail3" class="col-4 col-xl-3 col-form-label">İçerik</label>
                    <div class="col-8 col-xl-9">
                        @Html.TextAreaFor(x => x.Content, 5, 1, new { @class = "form-control" })
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="inputEmail3" class="col-4 col-xl-3 col-form-label">Resim</label>
                    <div class="col-8 col-xl-9">
                        @Html.TextBoxFor(x => x.Image, new { @class = "form-control" })
                    </div>
                </div>

                <div class="justify-content-end row">
                    <div class="col-8 col-xl-9">
                        <button type="submit" class="btn btn-info waves-effect waves-light">Ekle</button>
                    </div>
                </div>
            </form>

        </div>  <!-- end card-body -->
    </div>  <!-- end card -->
</div>  <!-- end col -->
