
@using ArchitectureProject.Models.Entity
@model List<Slider>

@{
    ViewBag.Title = "ASliderList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-12">
        <h4 class="mt-3 mb-3">Ana Sayfa</h4>
        <div class="card-group">
            <div class="col-md-6 col-xl-12">
                <div class="col-md-4">
                    <div class="card">
                        @foreach (var item in Model)
                        {
                            <div class="card-body">
                                <h4 class="card-title">@item.BigTitle</h4>
                                <p class="card-text">
                                    @item.Content
                                </p>
                                <p class="card-text">
                                    <a href="/Slider/ASliderUpdate/@item.SliderID" class="btn-sm btn-warning">Güncelle</a>
                                </p>
                            </div>
                        }
                        <img class="card-img-bottom img-fluid" src="~/archite/architetemplate/img/bannerOneBg.jpg" alt="Card image cap">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

