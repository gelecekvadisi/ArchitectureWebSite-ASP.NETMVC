
@using ArchitectureProject.Models.Entity
@model List<SiteSettings>

@{
    ViewBag.Title = "ASiteSettingsList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h4 class="mt-0 header-title">Site Ayarları Sayfası</h4>
            <p class="text-muted font-14 mb-3">
                Bu sayfada web sitemizin ayaları listelenmektedir.
            </p>

            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Adres</th>
                            <th>Telefon Numarası</th>
                            <th>Mail Adresi</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">@item.SiteSettingsID</th>
                                <td>@item.Address</td>
                                <td>@item.PhoneNumber</td>
                                <td>@item.Email</td>
                                <td>
                                    <a href="/SiteSettings/ASiteSettingsUpdate/@item.SiteSettingsID" class="btn btn-warning">Güncelle</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>

        </div>

    </div>

</div>

