
@model ArchitectureProject.Models.Entity.SiteSettings

@{
    ViewBag.Title = "ASiteSettingsUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-lg-12">
    <div class="card">
        <div class="card-body">

            <h4 class="mb-3 header-title">Hakkımızda Güncelleme</h4>

            <form class="form-horizontal" method="post">

                @Html.HiddenFor(x => x.SiteSettingsID)

                <div class="row mb-3">
                    <label for="inputEmail3" class="col-4 col-xl-3 col-form-label">Facebook Link</label>
                    <div class="col-8 col-xl-9">
                        @Html.TextBoxFor(x => x.FacebookLink, new { @class = "form-control" })
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="inputEmail3" class="col-4 col-xl-3 col-form-label">Linkedin Link</label>
                    <div class="col-8 col-xl-9">
                        @Html.TextBoxFor(x => x.LinkedinLink, new { @class = "form-control" })
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="inputEmail3" class="col-4 col-xl-3 col-form-label">Instagram Link</label>
                    <div class="col-8 col-xl-9">
                        @Html.TextBoxFor(x => x.InstagramLink, new { @class = "form-control" })
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="inputEmail3" class="col-4 col-xl-3 col-form-label">Twitter Link</label>
                    <div class="col-8 col-xl-9">
                        @Html.TextBoxFor(x => x.TwitterLink, new { @class = "form-control" })
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="inputEmail3" class="col-4 col-xl-3 col-form-label">Youtube Link</label>
                    <div class="col-8 col-xl-9">
                        @Html.TextBoxFor(x => x.YoutubeLink, new { @class = "form-control" })
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="inputEmail3" class="col-4 col-xl-3 col-form-label">Adres</label>
                    <div class="col-8 col-xl-9">
                        @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="inputEmail3" class="col-4 col-xl-3 col-form-label">Telefon Numarası</label>
                    <div class="col-8 col-xl-9">
                        @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" })
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="inputEmail3" class="col-4 col-xl-3 col-form-label">Şirket Telefon Numarası</label>
                    <div class="col-8 col-xl-9">
                        @Html.TextBoxFor(x => x.CompanyNumber, new { @class = "form-control" })
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="inputEmail3" class="col-4 col-xl-3 col-form-label">Mail Adresi</label>
                    <div class="col-8 col-xl-9">
                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="inputEmail3" class="col-4 col-xl-3 col-form-label">Harita</label>
                    <div class="col-8 col-xl-9">
                        @Html.TextAreaFor(x => x.Map, 3, 1, new { @class = "form-control" })
                    </div>
                </div>


                <div class="justify-content-end row">
                    <div class="col-8 col-xl-9">
                        <button type="submit" class="btn btn-info waves-effect waves-light">Güncelle</button>
                    </div>
                </div>
            </form>

        </div>  <!-- end card-body -->
    </div>  <!-- end card -->
</div>  <!-- end col -->
