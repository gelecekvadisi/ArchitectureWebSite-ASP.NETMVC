
@using ArchitectureProject.Models.Entity
@model List<Contact>

@{
    ViewBag.Title = "AContactDetail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            @foreach (var item in Model)
            {
                <div class="card-body task-detail">
                    <div class="dropdown float-end">
                        <a href="#" class="dropdown-toggle arrow-none card-drop" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="mdi mdi-dots-vertical"></i>
                        </a>
                    </div>
                    <div class="d-flex mb-3">
                        <img class="flex-shrink-0 me-3 rounded-circle avatar-md" alt="64x64" src="~/admin/Admin/dist/assets/images/users/user-2.jpg">
                        <div class="flex-grow-1">
                            <h4 class="media-heading mt-0">@item.Name</h4>
                        </div>
                    </div>

                    <h4>@item.Email</h4>

                    <p class="text-muted">
                        @item.Message
                    </p>


                    <div class="row task-dates mb-0 mt-2">
                        <div class="col-lg-6">
                            <h5 class="font-600 m-b-5">Alınan Tarih</h5>
                            <p> @item.DateContact <small class="text-muted"></small></p>
                        </div>

                        <div class="col-lg-6">
                            <a href="/Contact/AContactDelete/@item.ContactID" class="btn btn-danger">Sil</a>
                        </div>
                    </div>
                    <div class="clearfix"></div>

                </div>
            }
        </div>

    </div><!-- end col -->

</div>