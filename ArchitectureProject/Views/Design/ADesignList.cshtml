

@using ArchitectureProject.Models.Entity
@model List<DesignAgency>

@{
    ViewBag.Title = "ADesignList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h4 class="mt-0 header-title">Tasarım Sayfası</h4>
            <p class="text-muted font-14 mb-3">
                Bu sayfada web sitemizin tasarım bölümünün bilgilerini kontrol edebiliriz.
            </p>

            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>İçerik</th>
                            <th>Tasarım</th>
                            <th>Planlama</th>
                            <th>Alan Planı</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">@item.DesignAgencyID</th>
                                <td>@item.Title</td>
                                <td>@item.Content</td>
                                <td>@item.Creativity</td>
                                <td>@item.Management</td>
                                <td>@item.SpacePlan</td>
                                <td>
                                    <a href="/Design/ADesignUpdate/@item.DesignAgencyID" class="btn btn-warning">Güncelle</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>

        </div>

    </div>

</div>

