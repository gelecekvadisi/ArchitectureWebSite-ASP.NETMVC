
@model ArchitectureProject.Models.Entity.DesignAgency

@{
    ViewBag.Title = "ADesignUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">

            <h4 class="mb-3 header-title">Tasarım Güncelleme</h4>

            <form class="form-horizontal" method="post">

                @Html.HiddenFor(x => x.DesignAgencyID)

                <div class="row mb-3">
                    <label for="inputEmail3" class="col-4 col-xl-3 col-form-label">Başlık</label>
                    <div class="col-8 col-xl-9">
                        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="inputEmail3" class="col-4 col-xl-3 col-form-label">Tasarım</label>
                    <div class="col-8 col-xl-9">
                        @Html.TextAreaFor(x => x.Creativity, 3, 1, new { @class = "form-control" })
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="inputEmail3" class="col-4 col-xl-3 col-form-label">İçerik</label>
                    <div class="col-8 col-xl-9">
                        @Html.TextAreaFor(x => x.Content, 5, 1, new { @class = "form-control" })
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="inputEmail3" class="col-4 col-xl-3 col-form-label">Planlama</label>
                    <div class="col-8 col-xl-9">
                        @Html.TextAreaFor(x => x.Management, 3, 1, new { @class = "form-control" })
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="inputEmail3" class="col-4 col-xl-3 col-form-label">Alan Planı</label>
                    <div class="col-8 col-xl-9">
                        @Html.TextAreaFor(x => x.SpacePlan, 3, 1, new { @class = "form-control" })
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="inputEmail3" class="col-4 col-xl-3 col-form-label">Resim</label>
                    <div class="col-8 col-xl-9">
                        @Html.TextBoxFor(x => x.Image, new { @class = "form-control" })
                    </div>
                </div>

                <div class="justify-content-end row">
                    <div class="col-8 col-xl-9">
                        <button type="submit" class="btn btn-info waves-effect waves-light">Güncelle</button>
                    </div>
                </div>
            </form>

        </div>  <!-- end card-body -->
    </div>  <!-- end card -->
</div>  <!-- end col -->
