
@using ArchitectureProject.Models.Entity
@model List<Testimonials>

@{
    ViewBag.Title = "ATestimonialsList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<a href="/Testimonials/ANewTestimonial/" class="btn btn-success mb-3">Yeni Yorum Ekle</a>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-xl-3 col-md-6">
            <div class="card">
                <div class="text-center card-body">
                    <div class="dropdown float-end">
                        <a href="#" class="dropdown-toggle arrow-none card-drop" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="mdi mdi-dots-vertical"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-end">
                            <!-- item-->
                            <a href="/Testimonials/AUpdateTestimonial/@item.TestimonialsID" class="dropdown-item">Güncelle</a>
                            <!-- item-->
                            <a href="/Testimonials/ADeleteTestimonial/@item.TestimonialsID" class="dropdown-item">Sil</a>
                            <!-- item-->
                            @if (item.Status == true)
                            {
                                <a href="/Testimonials/AStatusChange/@item.TestimonialsID" class="dropdown-item text-danger">Yayından Kaldır</a>
                            }
                            else
                            {
                                <a href="/Testimonials/AStatusChange/@item.TestimonialsID"  class="dropdown-item text-success">Yayına Al</a>
                            }
                        </div>
                    </div>
                    <div>
                        <img src="~/admin/Admin/dist/assets/images/users/testimonials.jpg" class="rounded-circle avatar-xl img-thumbnail mb-3" alt="Yorum">

                        <p class="text-muted font-15 mb-4">
                            <strong>@item.Comment</strong>
                        </p>

                        <div class="text-start">
                            <p class="text-muted font-13"><strong>Ad Soyad :</strong> <span class="ms-2">@item.Name</span></p>

                            <p class="text-muted font-13 m-b-5"><strong>Konum :</strong> <span class="ms-2">@item.Location</span></p>

                            <p class="text-muted font-13"><strong>Tarih :</strong><span class="ms-2">@(((DateTime)item.DateTestimonial).ToString("dd MMMM yyyy"))</span></p>


                        </div>

                    </div>

                </div>
            </div>

        </div>
    }
</div>

