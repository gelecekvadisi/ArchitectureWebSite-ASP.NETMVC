
@model ArchitectureProject.Models.Entity.Admin

@{
    ViewBag.Title = "AUpdateAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-lg-12">
    <div class="card">
        <div class="card-body">

            <h4 class="mb-3 header-title">Yeni Admin Ekleme</h4>

            <form class="form-horizontal" method="post">

                @Html.HiddenFor(x => x.AdminId)

                <div class="row mb-3">
                    <label for="inputEmail3" class="col-4 col-xl-3 col-form-label">Kullanıcı Adı</label>
                    <div class="col-8 col-xl-9">
                        @Html.TextBoxFor(x => x.Username, new { @class = "form-control" })
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="inputEmail3" class="col-4 col-xl-3 col-form-label">Şifre</label>
                    <div class="col-8 col-xl-9">
                        @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                    </div>
                </div>

                <div class="justify-content-end row">
                    <div class="col-8 col-xl-9">
                        <button type="submit" class="btn btn-info waves-effect waves-light">Güncelle</button>
                    </div>
                </div>
            </form>

        </div>  <!-- end card-body -->
    </div>  <!-- end card -->
</div>  <!-- end col -->