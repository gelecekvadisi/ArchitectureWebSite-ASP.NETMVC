
@model ArchitectureProject.Models.Entity.About

@{
    ViewBag.Title = "AAboutUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">

            <h4 class="mb-3 header-title">Hakkımızda Güncelleme</h4>

            <form class="form-horizontal" method="post">

                @Html.HiddenFor(x=>x.AboutID)

                <div class="row mb-3">
                    <label for="inputEmail3" class="col-4 col-xl-3 col-form-label">Büyük Başlık</label>
                    <div class="col-8 col-xl-9">
                        @Html.TextBoxFor(x => x.BigTitle, new { @class = "form-control" })
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="inputEmail3" class="col-4 col-xl-3 col-form-label">Alt Başlık</label>
                    <div class="col-8 col-xl-9">
                        @Html.TextBoxFor(x => x.SubTitle, new { @class = "form-control" })
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="inputEmail3" class="col-4 col-xl-3 col-form-label">İçerik</label>
                    <div class="col-8 col-xl-9">
                        @Html.TextAreaFor(x => x.Content, 5, 1, new { @class = "form-control" })
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="inputEmail3" class="col-4 col-xl-3 col-form-label">Hikayemiz</label>
                    <div class="col-8 col-xl-9">
                        @Html.TextAreaFor(x => x.OurStory, 3, 1, new { @class = "form-control" })
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="inputEmail3" class="col-4 col-xl-3 col-form-label">Hedefimiz</label>
                    <div class="col-8 col-xl-9">
                        @Html.TextAreaFor(x => x.OurGoal, 3, 1, new { @class = "form-control" })
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="inputEmail3" class="col-4 col-xl-3 col-form-label">Büyük Resim</label>
                    <div class="col-8 col-xl-9">
                        @Html.TextBoxFor(x => x.BigImage, new { @class = "form-control" })
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="inputEmail3" class="col-4 col-xl-3 col-form-label">Küçük Resim</label>
                    <div class="col-8 col-xl-9">
                        @Html.TextBoxFor(x => x.ShortImage, new { @class = "form-control" })
                    </div>
                </div>

                <div class="justify-content-end row">
                    <div class="col-8 col-xl-9">
                        <button type="submit" class="btn btn-info waves-effect waves-light">Güncelle</button>
                    </div>
                </div>
            </form>

        </div>  <!-- end card-body -->
    </div>  <!-- end card -->
</div>  <!-- end col -->
