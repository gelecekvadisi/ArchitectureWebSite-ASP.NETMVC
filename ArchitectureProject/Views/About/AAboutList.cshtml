
@using ArchitectureProject.Models.Entity
@model List<About>

@{
    ViewBag.Title = "AAboutList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">           
            <h4 class="mt-0 header-title">Hakkımızda Sayfası</h4>
            <p class="text-muted font-14 mb-3">
                Bu sayfada web sitemizin hakkımızda bölümünün bilgilerini kontrol edebiliriz.
            </p>

            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Büyük Başlık</th>
                            <th>Alt Başlık</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">@item.AboutID</th>
                                <td>@item.BigTitle</td>
                                <td>@item.SubTitle</td>
                                <td>
                                    <a href="/About/AAboutUpdate/@item.AboutID" class="btn btn-warning">Güncelle</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>

        </div>

    </div>

</div>

