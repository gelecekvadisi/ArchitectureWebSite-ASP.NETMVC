
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Log In | Adminto - Responsive Admin Dashboard Template</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="A fully featured admin theme which can be used to build CRM, CMS, etc." name="description" />
    <meta content="Coderthemes" name="author" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/admin/Admin/dist/assets/images/favicon.ico">

    <!-- App css -->

    <link href="~/admin/Admin/dist/assets/css/app.min.css" rel="stylesheet" type="text/css" id="app-style" />

    <!-- icons -->
    <link href="~/admin/Admin/dist/assets/css/icons.min.css" rel="stylesheet" type="text/css" />

</head>

<body class="loading authentication-bg authentication-bg-pattern">

    <div class="account-pages my-5">
        <div class="container">

            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-4">
                    <div class="text-center">
                        <a href="index.html">
                            <img src="~/admin/Admin/dist/assets/images/logo-dark.png" alt="" height="22" class="mx-auto">
                        </a>
                        <p class="text-muted mt-2 mb-4">Gelecek Vadisi Admin Paneli Login</p>

                    </div>
                    <div class="card">
                        <div class="card-body p-4">

                            <div class="text-center mb-4">
                                <h4 class="text-uppercase mt-0">Giriş Yap</h4>
                            </div>

                            <form method="post">
                                <div class="mb-3">
                                    <label for="emailaddress" class="form-label">Kullanıcı Adı</label>
                                    <input class="form-control" name="Username" type="text" id="emailaddress" required="" placeholder="Lütfen Kullanıcı Adınızı Giriniz">
                                </div>

                                <div class="mb-3">
                                    <label for="password" class="form-label">Şifre</label>
                                    <input class="form-control" name="Password" type="password" required="" id="password" placeholder="Lütfen Şifrenizi Giriniz">
                                </div>


                                <div class="mb-3 d-grid text-center">
                                    <button class="btn btn-primary" type="submit"> Giriş Yap </button>
                                </div>
                            </form>

                        </div> <!-- end card-body -->
                    </div>
                    <!-- end row -->

                </div> <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </div>
    <!-- end page -->
    <!-- Vendor -->
    <script src="~/admin/Admin/dist/assets/libs/jquery/jquery.min.js"></script>
    <script src="~/admin/Admin/dist/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/admin/Admin/dist/assets/libs/simplebar/simplebar.min.js"></script>
    <script src="~/admin/Admin/dist/assets/libs/node-waves/waves.min.js"></script>
    <script src="~/admin/Admin/dist/assets/libs/waypoints/lib/jquery.waypoints.min.js"></script>
    <script src="~/admin/Admin/dist/assets/libs/jquery.counterup/jquery.counterup.min.js"></script>
    <script src="~/admin/Admin/dist/assets/libs/feather-icons/feather.min.js"></script>

    <!-- App js -->
    <script src="~/admin/Admin/dist/assets/js/app.min.js"></script>

</body>
</html>